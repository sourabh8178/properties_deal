<% if flash[:notice].present? %>
<div class="alert alert-success" role="alert">
  <div>
    <i class="bi bi-check-circle-fill"></i> &nbsp; <%= flash[:notice] %>
  </div>
</div>
<% end %>
<%= render partial: "admin/properties/index" %>
<style >
	.alert{
		top: 6px;
    width: 38%;
    left: 28%;
    text-align: center;
	}
</style>

<script>
	$(document).ready(function() {
  var myDiv = $('.alert-success');

  if (myDiv.length) {
    setTimeout(function() {
     myDiv.fadeOut(2000);
    }, 3000);
  }
});
</script>