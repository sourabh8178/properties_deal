<div class="col-lg-12  p-3  bg-white">
<div class="row hedding m-0 pl-3 pt-0 pb-3">
</div>
<div class="row m-0">
    <div class="col-lg-4 left-side-product-box pb-3">
    	<%= image_tag @property.images.first, class:"border p-3"%>
        <span class="sub-img">
        	<% if @property.images.any? %>
			    	<% @property.images.each do |img| %>
					    <%= image_tag img, class:"border p-2"%>
			    	<% end %>
			    <% end %>
        </span>
    </div>
    <div class="col-lg-8">
        <div class="right-side-pro-detail border p-3 m-0">
            <div class="row">
                <div class="col-lg-8">
                    <span><strong><%= @property.name.capitalize %></strong></span>
                    <p class="m-0 p-0" style="color: black;">Location : <%= @property.location %></p>
                    <p class="m-0 p-0" style="color: black;">Status : <%= @property.status_type %></p>
                </div>
                <div class="col-lg-12">
                    <p class="m-0 p-0 price-pro">$<%= @property.price %></p>
                    <hr class="p-0 m-0">
                </div>
                <div class="col-lg-12 pt-2">
                    <h5>Product Detail</h5>
                    <span><%= @property.description %></span>
                    <hr class="m-0 pt-2 mt-2">
                </div>
                <div class="col-lg-12">
                    <h6>Bedrooms :<%= @property.bedrooms %></h6>
                </div>
                <div class="col-lg-12">
                    <h6>Bathrooms :<%= @property.bathrooms %></h6>
                </div>
                <div class="col-lg-12">
                    <h6>Parkings :<%= @property.parking %></h6>
                </div>
                <div class="col-lg-12">
                    <h6>size :<%= @property.size %>sq.ft</h6>
                </div>
                <div class="col-lg-12 mt-3">
                    <div class="row">
                        <!-- <div class="col-lg-6 pb-2"> -->
                            <!-- <a href="#" class="btn btn-danger w-100">Add To Cart</a> -->
                            <%#= link_to "back", admin_properties_path, class:"btn btn-danger w-100"%>
                        <!-- </div> -->
                        <div class="col-lg-6">
                            <!-- <a href="#" class="btn btn-success w-100">Shop Now</a> -->
                            <%= link_to "Edit ", edit_admin_property_path(@property), class:"btn btn-warning w-100"%>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%= link_to "back", admin_properties_path, class:"btn btn-danger"%>
</div>
